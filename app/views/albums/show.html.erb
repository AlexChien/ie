<script type="text/javascript" charset="utf-8">
	$(function(){
		$("a[rel='assets']").colorbox({slideshow:true,slideshowSpeed:5000});
	})
</script>

<%if current_user && current_user.has_role?("admin")%>
<div style="margin: auto; width: 950px;">
    <%=render :partial=>"shared/sidebar"%>

    <div class="MemberMain">
		<h2 style="padding:10px;" class="orange"><a href="/albums">相册</a> - <%=@album.title%> - 预览</h2>
        <div style="padding:10px;">
			<table width="100%" cellspacing="0" cellpadding="0" class="album_list">
				<tbody>
					<tr>
						<%@assets.values_at(0..3).each do |asset|%>
							<%=render :partial=>"asset",:object=>asset%>
						<%end%>
					</tr>
					
					<tr>
						<%@assets.values_at(4..7).each do |asset|%>
							<%=render :partial=>"asset",:object=>asset%>
						<%end%>
					</tr>
					
					<tr>
						<%@assets.values_at(8..11).each do |asset|%>
							<%=render :partial=>"asset",:object=>asset%>
						<%end%>
					</tr>
				</tbody>
			</table>
        </div>
    </div>
</div>

<%=will_paginate @assets%>

<div class="clear"></div>
<%else%>
<h2  style="padding-top:30px;padding-left:50px;" class="orange"><a href="/albums">相册</a> - <%=@album.title%> - 预览</h2>
<div style="padding-top:10px;padding-left:50px;margin:50px;">
	<table width="100%" cellspacing="0" cellpadding="0" class="album_list">
		<tbody>
			<tr>
				<%@assets.values_at(0..3).each do |asset|%>
					<%=render :partial=>"asset",:object=>asset%>
				<%end%>
			</tr>
			
			<tr>
				<%@assets.values_at(4..7).each do |asset|%>
					<%=render :partial=>"asset",:object=>asset%>
				<%end%>
			</tr>
			
			<tr>
				<%@assets.values_at(8..11).each do |asset|%>
					<%=render :partial=>"asset",:object=>asset%>
				<%end%>
			</tr>
		</tbody>
	</table>
</div>

<%=will_paginate @assets%>
<%end%>